{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@ws/*": ["./src/ws/*"],
      "@type": ["./src/types.js"],
      "@utils": ["./src/utils.js"],
      "@function/*": ["./src/func/*"],
      "@kash-88/alerts": ["./src/index.js"]
    },

    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/example"
  ]
} 